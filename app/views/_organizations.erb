<section id="the-organizations" name="the-organizations"></section>
  <div id="organizations">
    <div class="container">
      <div class="row centered">
        <h1>Organizations Actively Working on Fixing the Toxic Culture</h1>
        <div class="organization">
          <ul>
            <% CONFIG["organizations"].each do |org| %>
              <li class="org-item">
              <div class="masthead">
                <h4><%= org["name"] %></h4>
                <ul class="links">
                  <li class="website"><a href="<%= org['website_link'] %>" target="_blank"><i class="icon icon-link"></i></a></li>
                  <li class="donate"><a href="<%= org['donate_link'] %>" target="_blank"><i class="icon icon-donate"></i></a></li>
                </ul>
              </div>
              </li>
            <% end %>
          </ul>
          <br><br>
        </div>

        <br><br>
      </div>
    </div>
  </div>
