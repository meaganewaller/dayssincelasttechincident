<section id="suggest" name="suggest" class="section"></section>
<div id="footerwrap">
  <div class="container">
    <div class="col-lg-5">
      <h3>Important Links</h3>
      <p>
      <i class="icon icon-heart"></i>Contribute on <a href="https://gitlab.com/meagan/daysincelasttechincident">GitLab</a>
      <br>
      Created by <a href="http://www.meaganwaller.com" target="_blank">Meagan Waller</a>
      <br>
      <a href="/credits">Credits</a>
      <br>
      </p>
    </div>

    <div class="col-lg-7">
      <h3>Suggest a Resource</h3>
      <br>
      <form role="form" action="/" method="post" enctype="plain">
        <div class="form-group">
          <label for="name">Your Name</label>
          <input type="name" name="name" class="form-control" id='name' placeholder="Your Name" required autofocus>
        </div>
        <div class="form-group">
          <label for="mail">Email Address</label>
          <input type="email" name="mail" class="form-control" id="mail" placeholder="Enter email" required>
        </div>
        <div class="form-group">
          <label for="subject">Resource Type</label>
          <br>
          <select name="subject" class="form-control" required>
            <option value='' disabled selected style="display:none">Choose One</option>
            <option value="person">Person</option>
            <option value="organization">Organization</option>
            <option value="article">Article, Video, etc</option>
            <option value="other">Other (Explain Below)</option>
          </select>
        </div>
        <div class="form-group">
          <label for="message">Information about Resource</label>
          <textarea class="form-control" name="message" rows="3" required placeholder="Please include any relevant links!"></textarea>
        </div>
        <br>
        <button type="submit" class="btn btn-large btn-success">SUBMIT</button>
      </form>
    </div>
  </div>
</div>
